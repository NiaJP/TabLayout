<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id = "@+id/etNet"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:inputType="text|numberDecimal"
        android:hint="金額を入力"
        android:selectAllOnFocus="true"
        android:elevation="0dp"
        android:textAlignment="viewEnd"
        android:layout_gravity="left|end" />


    <EditText
        android:id = "@+id/etPersons"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:inputType="text|numberDecimal"
        android:textAlignment="viewEnd"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/etNet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:selectAllOnFocus="true"
        android:hint="人数を入力" />

    <Button
        android:id = "@+id/btCalcuration"
        android:text="計算"
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:elevation="24dp"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:onClick="calcuration"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/etPersons"
        android:layout_alignRight="@+id/etPersons"
        android:layout_alignEnd="@+id/etPersons" />

    <TextView
        android:id = "@+id/tvResult"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:fontFamily="monospace"
        android:lineSpacingExtra="12sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btCalcuration"
        android:layout_alignRight="@+id/etNet"
        android:layout_alignEnd="@+id/etNet" />

</RelativeLayout>


